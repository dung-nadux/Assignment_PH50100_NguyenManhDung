<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rectangle_with_bottom_line.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Định nghĩa hình chữ nhật -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF"/> <!-- Màu nền trắng, bạn có thể thay đổi tùy ý -->
        </shape>
    </item>
    <!-- Định nghĩa đường kẻ ở bottom -->
    <item android:top="-3dp" android:right="-3dp" android:left="-3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Màu trong suốt -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- Màu đỏ, bạn có thể thay đổi tùy ý -->
        </shape>
    </item>
    </layer-list>

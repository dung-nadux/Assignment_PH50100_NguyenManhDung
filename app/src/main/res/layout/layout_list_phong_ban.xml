<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgLogoPB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/home_work"/>
    <TextView
        android:id="@+id/tvTenPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Nhân sự"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/imgLogoPB"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:id="@+id/btnSua"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/rectangle_no_border"
            android:backgroundTint="#FF9191">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_mode_edit"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnXoa"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/rectangle_no_border"
            android:backgroundTint="#FF9191">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_solid"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>